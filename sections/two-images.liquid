{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}
<div class="color-scheme-{{ section.settings.color_scheme }}">
<div class="image-with-text {% if section.settings.full_width %}image-with-text--full-width{% else %}page-width{% endif %} color-scheme-{{ section.settings.color_scheme }}">
  <div class="image-with-text__grid color-{{ section.settings.color_scheme }}{% if section.settings.layout == 'text_first' %} image-with-text__grid--reverse{% endif %} grid grid--gapless grid--1-col grid--2-col-tablet">
    <div class="grid__item" style="height: {{ section.settings.image_height }}vh">
      <div class=" color-scheme-border-{{ section.settings.color_scheme }} image-with-text__media media--hover-effect image-with-text__media--{{ section.settings.height }} {% if section.settings.image_2 != blank %}first__image__child{% endif %} {% if section.settings.image != blank %}media{% else %}image-with-text__media--placeholder placeholder{% endif %} two__image__columns" 
      >
        {%- if section.settings.image != blank -%}
          {%- if section.blocks[0] != blank -%}
            <a class="two__image__columns color-scheme-border-{{ section.settings.color_scheme }} image-with-text__media media--hover-effect image-with-text__media--{{ section.settings.height }} {% if section.settings.image_2 != blank %}first__image__child{% endif %} {% if section.settings.image != blank %}media{% else %}image-with-text__media--placeholder placeholder{% endif %}"
            {% if section.blocks[0].settings.button_link != blank %} href="{{ section.blocks[0].settings.button_link }}"{% endif %} {% if section.blocks[0].settings.button_link == blank %} aria-disabled="true"{% endif %} {{ block.shopify_attributes }}>
          {%- endif -%}
        <div class="two__image__button__text">{{ section.blocks[0].settings.button_label | escape }}</div>
          <img srcset="{%- if section.settings.image.width >= 165 -%}{{ section.settings.image | img_url: '165x' }} 165w,{%- endif -%}
            {%- if section.settings.image.width >= 360 -%}{{ section.settings.image | img_url: '360x' }} 360w,{%- endif -%}
            {%- if section.settings.image.width >= 535 -%}{{ section.settings.image | img_url: '535x' }} 535w,{%- endif -%}
            {%- if section.settings.image.width >= 720 -%}{{ section.settings.image | img_url: '720x' }} 720w,{%- endif -%}
            {%- if section.settings.image.width >= 940 -%}{{ section.settings.image | img_url: '940x' }} 940w,{%- endif -%}
            {%- if section.settings.image.width >= 1070 -%}{{ section.settings.image | img_url: '1070x' }} 1070w{%- endif -%}"
            src="{{ section.settings.image | img_url: '533x' }}"
            sizes="(min-width: 1100px) 535px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
            alt="{{ section.settings.image.alt | escape }}"
            loading="lazy"
            width="{{ section.settings.image.width }}"
            height="{{ section.settings.image.height }}"
          >
          {%- if section.blocks[0] != blank -%}
            </a>
          {%- endif -%}
        {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      </div>
    </div>
    <div class="grid__item" style="height: {{ section.settings.image_height }}vh">
      <div class="color-scheme-border-{{ section.settings.color_scheme }} image-with-text__media media--hover-effect image-with-text__media--{{ section.settings.height }} {% if section.settings.image_2 != blank %}first__image__child{% endif %} {% if section.settings.image != blank %}media{% else %}image-with-text__media--placeholder placeholder{% endif %} two__image__columns"
      >
        {%- if section.settings.image_2 != blank -%}
          {%- if section.blocks[1] != blank -%}
          <a class="two__image__columns color-scheme-border-{{ section.settings.color_scheme }} image-with-text__media media--hover-effect image-with-text__media--{{ section.settings.height }} {% if section.settings.image_2 != blank %}first__image__child{% endif %} {% if section.settings.image != blank %}media{% else %}image-with-text__media--placeholder placeholder{% endif %}"
          {% if section.blocks[1].settings.button_link != blank %} href="{{ section.blocks[1].settings.button_link }}"{% endif %} {% if section.blocks[1].settings.button_link == blank %} aria-disabled="true"{% endif %} {{ block.shopify_attributes }}>
        {%- endif -%}
    <div class="two__image__button__text">{{ section.blocks[1].settings.button_label | escape }}</div>
        <img srcset="{%- if section.settings.image_2.width >= 165 -%}{{ section.settings.image_2 | img_url: '165x' }} 165w,{%- endif -%}
          {%- if section.settings.image_2.width >= 360 -%}{{ section.settings.image_2 | img_url: '360x' }} 360w,{%- endif -%}
          {%- if section.settings.image_2.width >= 535 -%}{{ section.settings.image_2 | img_url: '535x' }} 535w,{%- endif -%}
          {%- if section.settings.image_2.width >= 720 -%}{{ section.settings.image_2 | img_url: '720x' }} 720w,{%- endif -%}
          {%- if section.settings.image_2.width >= 940 -%}{{ section.settings.image_2 | img_url: '940x' }} 940w,{%- endif -%}
          {%- if section.settings.image_2.width >= 1070 -%}{{ section.settings.image_2 | img_url: '1070x' }} 1070w{%- endif -%}"
          src="{{ section.settings.image_2 | img_url: '533x' }}"
          sizes="(min-width: 1100px) 535px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
          alt="{{ section.settings.image_2.alt | escape }}"
          loading="lazy"
          width="{{ section.settings.image_2.width }}"
          height="{{ section.settings.image_2.height }}"
        >
        {%- if section.blocks[1] != blank -%}
          </a>
        {%- endif -%}
        {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      </div>
    </div>

  </div>
</div>
</div>

{% schema %}

{
    "name": "t:sections.two-image-columns.name",
    "class": "spaced-section spaced-section--full-width",
    "settings": [
        {
            "type": "image_picker",
            "id": "image",
            "label": "t:sections.two-image-columns.settings.image.label"
        }, {
            "type": "image_picker",
            "id": "image_2",
            "label": "t:sections.two-image-columns.settings.image_2.label"
        }, {
            "type": "range",
            "id": "image_height",
            "min": 20,
            "max": 100,
            "step": 5,
            "unit": "%",
            "label": "t:sections.two-image-columns.settings.image_height.label",
            "default": 30
        }, {
            "type": "select",
            "id": "color_scheme",
            "options": [
                {
                    "value": "taupe",
                    "label": "t:sections.two-image-columns.settings.color_scheme.options__1.label"
                }, {
                    "value": "bronze",
                    "label": "t:sections.two-image-columns.settings.color_scheme.options__2.label"
                }, {
                    "value": "white",
                    "label": "t:sections.two-image-columns.settings.color_scheme.options__3.label"
                }, {
                    "value": "silver",
                    "label": "t:sections.two-image-columns.settings.color_scheme.options__4.label"
                }
            ],
            "default": "taupe",
            "label": "t:sections.two-image-columns.settings.color_scheme.label"
        }, {
            "type": "select",
            "id": "layout",
            "options": [
                {
                    "value": "image_first",
                    "label": "t:sections.two-image-columns.settings.layout.options__1.label"
                }, {
                    "value": "text_first",
                    "label": "t:sections.two-image-columns.settings.layout.options__2.label"
                }
            ],
            "default": "image_first",
            "label": "t:sections.two-image-columns.settings.layout.label",
            "info": "t:sections.two-image-columns.settings.layout.info"
        }
    ],
    "blocks": [
        {
            "type": "button",
            "name": "t:sections.two-image-columns.blocks.button.name",
            "limit": 2,
            "settings": [
                {
                    "type": "text",
                    "id": "button_label",
                    "default": "Button label",
                    "label": "t:sections.two-image-columns.blocks.button.settings.button_label.label",
                    "info": "t:sections.two-image-columns.blocks.button.settings.button_label.info"
                }, {
                    "type": "url",
                    "id": "button_link",
                    "label": "t:sections.two-image-columns.blocks.button.settings.button_link.label"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "t:sections.two-image-columns.presets.name",
            "blocks": [
                {
                    "type": "button"
                }
            ]
        }
    ]
}

{% endschema %}
